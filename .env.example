# --- Nextcloud ---
NEXTCLOUD_MYSQL_PASSWORD=your_nextcloud_db_password
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=your_nextcloud_admin_password
NEXTCLOUD_TRUSTED_DOMAINS=next.example.com
TRUSTED_PROXIES=nginx-proxy-manager

# --- Nextcloud DB ---
MYSQL_ROOT_PASSWORD=your_mariadb_root_password
MYSQL_USER=nextcloud
MYSQL_DATABASE=nextcloud

# --- VPN WireGuard ---
VPN_SERVER_URL=10.1.2.3 # IP Address
VPN_ADMIN_PASSWORD=vpn_admin_password

# --- Vaultwarden ---
VW_DOMAIN=https://vault.example.com
VW_ADMIN_TOKEN=please_generate_a_strong_random_token
VW_SIGNUPS_ALLOWED=false
VW_INVITATIONS_ALLOWED=true

# SMTP (adjust to your provider)
VW_SMTP_HOST=smtp.example.com
VW_SMTP_FROM=vault@example.com
VW_SMTP_FROM_NAME=Vaultwarden
VW_SMTP_PORT=587
VW_SMTP_SECURITY=starttls       # starttls | force_tls | off
VW_SMTP_USERNAME=smtp_user
VW_SMTP_PASSWORD=smtp_password
VW_SMTP_TIMEOUT=15

# Optional tuning
VW_ROCKET_WORKERS=auto
VW_ICON_CACHE_TTL=2592000
VW_SENDS_ALLOWED=true
VW_ATTACHMENT_SIZE_LIMIT=52428800  # 50 MB

# --- User & Timezone ---
USERMAP_UID=1001
USERMAP_GID=1001
TZ=Europe/Berlin